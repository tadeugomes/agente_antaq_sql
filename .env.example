# =============================================================================
# LLM Provider Configuration
# =============================================================================
# Options: openai, vertexai
LLM_PROVIDER=openai

# -----------------------------------------------------------------------------
# OpenAI Configuration (when LLM_PROVIDER=openai)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# -----------------------------------------------------------------------------
# Google Vertex AI Configuration (when LLM_PROVIDER=vertexai)
# -----------------------------------------------------------------------------
GOOGLE_CLOUD_PROJECT=saasimpacto
GOOGLE_CLOUD_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json
VERTEXAI_MODEL=gemini-1.5-flash
VERTEXAI_EMBEDDING_MODEL=textembedding-gecko@003

# -----------------------------------------------------------------------------
# Common LLM Settings
# -----------------------------------------------------------------------------
LLM_TEMPERATURE=0
LLM_MAX_TOKENS=1000
LLM_TIMEOUT=60

# =============================================================================
# Google Cloud Configuration (BigQuery)
# =============================================================================
ANTAQ_DATASET=br_antaq_estatistico_aquaviario
ANTAQ_DATASET_LOCATION=US

# =============================================================================
# Agent Configuration
# =============================================================================
AGENT_MAX_ROWS=1000
AGENT_TIMEOUT_SECONDS=60
AGENT_MAX_ATTEMPTS=3

# =============================================================================
# RAG Configuration
# =============================================================================
RAG_ENABLED=true
RAG_TOP_K=3
RAG_SIMILARITY_THRESHOLD=0.7

# =============================================================================
# Application Configuration
# =============================================================================
APP_TITLE="ANTAQ AI Agent"
APP_DEBUG=false

# =============================================================================
# Performance Optimization
# =============================================================================
# Path for LangGraph checkpoint storage (SQLite for conversation history)
# Leave empty for in-memory storage (faster but uses more memory)
LANGCHAIN_CHECKPOINT_PATH=.langchain_checkpoint.db

# Maximum messages to keep in chat history
MAX_CHAT_HISTORY=50

# Maximum query results to cache in memory
MAX_CACHED_RESULTS=10

# =============================================================================
# Error Monitoring (Sentry)
# =============================================================================
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
